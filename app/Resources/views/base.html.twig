<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Tea Village Hmoestay Cottage Mirik Darjeeling">
        <meta name="keywords" content="darjeeling homestay,tea village, tabakosi">
        <meta name="author" content="ezycreation">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css"/>
            <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css"/>
        {% endblock %}
        <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,400i,700,700i" rel="stylesheet">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            <section id="header">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="logo"><a href="#">Darjeeling <span>Homestay</span></a></div>
                        </div>
                        <div class="col-lg-8">
                            <nav role="custom-dropdown">
                                <input type="checkbox" id="button">
                                <label for="button" onclick></label>

                                <ul>
                                    <li><a href="#">Home</a></li>
                                    <li><a href="#">Activities</a></li>
                                    <li><a href="#">Rooms & Tariff</a></li>
                                    <li><a href="#">Photo Gallery</a></li>
                                    <li><a href="#">Contact us</a></li>
                                    <li><i class="fa fa-phone"></i></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </section>
        {% endblock %}
        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
            <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script type="text/javascript">
                $('#toggle-menu').click(function(e) {
                    e.preventDefault();
                    $('ul').toggleClass('active');
                });
            </script>
        {% endblock %}
    </body>
</html>
