
{% extends 'page.html.twig' %}
{% block parallax %}
    <div class="effect about"></div>
{% endblock %}
{% block body %}
    <div class="col-lg-12">
        <div class="content">
            <div class="col-lg-9">
                <h1><span>Activities</span></h1>

                <ul class="package-list-main">
                    {#{% for var in detail %}#}
                    {#<h2 class="accordion-toggle">{{ title }}</h2>#}
                    {% for var in detail %}
                        <li>
                            <img src="{{ asset('uploads/'~ var.image) }}" width="100%" height="150px" />
                            <h3><a href="{{ path('tea_homestay_packageview',{'id':var.id}) }}">{{ var.title }}</a></h3>
                        </li>
                    {% endfor %}
                    {#{% endfor %}#}
                </ul>
            </div>
            <div class="col-lg-3 no-gutter">
                <div class="testimonials">
                    <div class="owl-carousel">
                        {{ render(controller('AppBundle:Front:ReviewsScroll')) }}
                    </div>
                </div>
                <div class="contact">
                    <h1>Contact Details</h1>
                    {{ render(controller('AppBundle:Front:Contact', {'id': 1})) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}