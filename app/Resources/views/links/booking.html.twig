{% extends 'page.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datepicker.css') }}">
{% endblock %}
{% block parallax %}
    <div class="effect tariff"></div>
{% endblock %}
{% block body %}
    <div class="col-lg-12">
    <div class="content">
        <h1><span>Contact Form</span></h1>
        {% if app.session.flashBag.has('success') %}
            <div class="alert alert-success">
                {% for msg in app.session.flashBag.get('success') %}
                    {{ msg }}
                {% endfor %}
            </div>
        {% endif %}
{{ form_start(form,{ 'attr': {'class': 'form'} }) }}
 <div class=" col-lg-6 no-gutter">
     <div class="form-group">
         <div class="col-lg-3">Name</div>
         <div class="col-lg-8">
             {{ form_widget(form.name, {'attr':{'class': 'form-control'}}) }}
             {{ form_errors(form.name) }}
         </div>
     </div>

     <div class="clearfix"></div>
     <div class="form-group">
     <div class="col-lg-3">Email</div>
<div class="col-lg-8">
    {{ form_widget(form.email, {'attr':{'class': 'form-control'}}) }}
    <span style="color:red;">{{ form_errors(form.email) }}</span>
</div>
</div>
     <div class="clearfix"></div>
     <div class="form-group">
     <div class="col-lg-3">Phone</div>
     <div class="col-lg-8">
         {{ form_widget(form.phone, {'attr':{'class': 'form-control'}}) }}
         <span style="color:red;">{{ form_errors(form.phone) }}</span>
     </div>
     </div>
     <div class="clearfix"></div>
     <div class="form-group">
     <div class="col-lg-3">Address</div>
     <div class="col-lg-8">
         {{ form_widget(form.address, {'attr':{'class': 'form-control'}}) }}
         {{ form_errors(form.address) }}
     </div>
     </div>
     <div class="clearfix"></div>
     <div class="form-group">
     <div class="col-lg-3">Check in date</div>
     <div class="col-lg-8">
         {{ form_widget(form.checkin, {'attr':{'class': 'form-control dpd1'}}) }}
         {{ form_errors(form.checkin) }}
     </div>
     </div>
     <div class="clearfix"></div>
     <div class="form-group">
     <div class="col-lg-3">Check out date</div>
     <div class="col-lg-8">
         {{ form_widget(form.checkout, {'attr':{'class': 'form-control dpd2'}}) }}
         {{ form_errors(form.checkout) }}
     </div>
     </div>
     <div class="clearfix"></div>

     <div class="clearfix"></div>

</div>

<div class=" col-lg-6 no-gutter">
            <div class="form-group">
                <div class="col-lg-3">Room Type</div>
                <div class="col-lg-8">
                    {{ form_widget(form.roomtype, {'attr':{'class': 'form-control'}}) }}
                    {{ form_errors(form.roomtype) }}
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                <div class="col-lg-3">Room Plan</div>
                <div class="col-lg-8">
                    {{ form_widget(form.roomplan, {'attr':{'class': 'form-control'}}) }}
                    {{ form_errors(form.roomplan) }}
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                <div class="col-lg-3">No. of Guest</div>
                <div class="col-lg-4">
                    Adult
                    {{ form_widget(form.adult, {'attr':{'class': 'form-control'}}) }}
                    {{ form_errors(form.adult) }}
                </div>
                <div class="col-lg-4">
                    Child
                    {{ form_widget(form.child, {'attr':{'class': 'form-control'}}) }}
                    {{ form_errors(form.child) }}
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                <div class="col-lg-3">No. of Rooms</div>
                <div class="col-lg-8">
                    {{ form_widget(form.roomno, {'attr':{'class': 'form-control'}}) }}
                    {{ form_errors(form.roomno) }}
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                <div class="col-lg-3">Message</div>
                <div class="col-lg-8">
                    {{ form_widget(form.message, {'attr':{'class': 'form-control textarea'}}) }}
                    {{ form_errors(form.message) }}
                </div>
            </div>
        </div>
        {# Render CSRF token etc .#}
        <div style="display:none">
            {{ form_rest(form) }}
        </div>
        <div class="form-group">
            <div class="col-md-3 col-sm-12  col-lg-8 col-lg-offset-4">
                <input class="submit" type="submit" value=" SEND " name="B1">
            </div>
        </div>
        {{ form_end(form) }}

        <div class="col-lg-5">
            <h2>Contact Details</h2>
            {{ render(controller('AppBundle:Front:Contact', {'id': 1})) }}</div>
        <div class="col-lg-7">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d24575.716809611746!2d88.17805499578076!3d26.922160591101047!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39e4331f0105b837%3A0x6183247549b48721!2sTea+village+Home+stay+and+cottage!5e0!3m2!1sen!2sin!4v1489593825413" width="100%" height="200" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>


    </div>
    </div>
{%  endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/bootstrap-datepicker.js') }}"></script>
{% endblock %}