{% extends 'page.html.twig' %}
{% block parallax %}
    <div class="effect about"></div>
{% endblock %}
{% block body %}
        <div class="col-lg-12">
            <div class="content">
                <div class="col-lg-9">
                    <h1><span>Activities</span></h1>

					<div id="accordion">
                        {#{% for var in detail %}#}
                            <h2>{{ title }}</h2>
                            <div class="accordion-content default">
                                {{ description|raw }}
                            </div>
                        {#{% endfor %}#}
					</div>
<hr>
                    <div class="package-list">
                        <strong>Other Activities :</strong>
                        <ul>
                            {{ render(controller('AppBundle:Front:PackagesListHome')) }}
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 no-gutter">
                    <div class="testimonials">
                        <div class="owl-carousel">
                            {{ render(controller('AppBundle:Front:ReviewsScroll')) }}
                        </div>
                    </div>
                    <div class="contact">
                        <h1>Contact Details</h1>
                        {{ render(controller('AppBundle:Front:Contact', {'id': 1})) }}
                    </div>
                </div>
            </div>
         </div>
{% endblock %}

{% block javascripts %}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
	<script type="text/javascript">
		$(document).ready(function($) {
			$('#accordion').find('.accordion-toggle').click(function(){

				//Expand or collapse this panel
				$(this).next().slideToggle('fast');

				//Hide the other panels
				$(".accordion-content").not($(this).next()).slideUp('fast');

			});
		});
	</script>
    {{ parent() }}
{% endblock %}