{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Package</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ package.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ package.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ package.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('packages_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('packages_edit', { 'id': package.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
