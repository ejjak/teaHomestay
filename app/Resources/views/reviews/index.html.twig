{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Reviews list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Review</th>
                <th>Action</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td><a href="{{ path('reviews_show', { 'id': review.id }) }}">{{ review.id }}</a></td>
                <td>{{ review.name }}</td>
                <td>{{ review.lastname }}</td>
                <td>{{ review.email }}</td>
                <td>{{ review.phone }}</td>
                <td>{{ review.address }}</td>
                <td>{{ review.review }}</td>
                <td>{% if review.action %}Yes{% else %}No{% endif %}</td>
                <td>{% if review.created %}{{ review.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if review.modified %}{{ review.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reviews_show', { 'id': review.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reviews_edit', { 'id': review.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reviews_new') }}">Create a new review</a>
        </li>
    </ul>
{% endblock %}
